template

  // SAMPLE
  mdc-grid
    mdc-grid-cell(span="12")
      h4 Icon Toggle Buttons

    // CONFIG AREA
    mdc-grid-cell(span="4")
      mdc-checkbox(checked.bind="on") on: ${on}
      br
      mdc-checkbox(checked.bind="disabled") disabled: ${disabled}
          
    // DEMO AREA
    mdc-grid-cell(span="8")
      section.components
        h6 Example
        mdc-icon-toggle(
          on.bind="on"
          disabled.bind="disabled"
          icon-on="star"
          icon-off="star_outline"
          aria-label-on="On"
          aria-label-off="Off"
          on-toggle.delegate="onToggle($event)")
      
      p Toggle event value: ${iconValue}        

      section.components
        h6 Custom color
        mdc-icon-toggle.my-icon-toggle-primary(
          on.bind="on"
          disabled.bind="disabled"
          icon-on="star"
          icon-off="star_outline"
          aria-label-on="On"
          aria-label-off="Off"
          on-toggle.delegate="onToggle($event)")

      section.components
        mdc-icon-toggle.my-icon-toggle-secondary(
          on.bind="on"
          disabled.bind="disabled"
          icon-on="star"
          icon-off="star_outline"
          aria-label-on="On"
          aria-label-off="Off"
          on-toggle.delegate="onToggle($event)")

    // LINKS
    mdc-grid-cell(span="12")
      hr
      a(href="https://material.io/components/web/catalog/buttons/icon-toggle-buttons/" target="_blank" data-analytics-category="external" data-analytics-action="mdc-icon-toggle") Material components documentation
      br
      a(href="https://material.io/guidelines/components/buttons.html#buttons-toggle-buttons" target="_blank" data-analytics-category="external" data-analytics-action="mdg-icon-toggle") Material design guidelines
      br
      a(href="https://material.io/icons/" target="_blank" data-analytics-category="external" data-analytics-action="mdc-icons") Icons
      hr


    // EXAMPLE
    mdc-grid-cell(span="12")
      pre
        code-prism(language="typescript").
          import { IMdcIconToggleEvent } from 'aurelia-mdc-bridge';
    
          onToggle(event: IMdcIconToggleEvent) {
            this.isOn = event.detail;
          }

      pre
        code-prism.
          &lt;mdc-icon-toggle
            on.bind="on"
            disabled.bind="disabled"
            icon-on="star"
            icon-off="star_outline"
            aria-label-on="On"
            aria-label-off="Off"
            on-toggle.delegate="onToggle($event)"&gt;
          &lt;/mdc-icon-toggle&gt;


    // EXAMPLE CUSTOM COLOR
    mdc-grid-cell(span="12")
      section
        h5 Custom color
        pre
          code-prism(language="css").
            .my-icon-toggle-primary {
              .mdc-icon-toggle {
                @include mdc-states($mdc-theme-primary);
                @include mdc-icon-toggle-ink-color($mdc-theme-primary);
              }
            }
            .my-icon-toggle-secondary {
              .mdc-icon-toggle {
                @include mdc-states($mdc-theme-secondary);
                @include mdc-icon-toggle-ink-color($mdc-theme-secondary);
              }
            }

        pre
          code-prism.
            &lt;mdc-icon-toggle class="my-icon-toggle-.." ...&gt;
            &lt;/mdc-icon-toggle&gt;
