template
  aside(id="${controlId}"
    class="mdc-dialog"
    ref="diagElement"
    role="alertdialog"
    aria-labelledby="${controlId}-label"
    aria-describedby="${controlId}-description")

    .mdc-dialog__surface

      // HEADER
      header.mdc-dialog__header(show.bind="showHeader")
        slot(name="header")
          h2.mdc-dialog__header__title(id="${controlId}-label" ref="titleElement") ${header}

      // BODY
      section.mdc-dialog__body(id="${controlId}-description" class.bind="scrollable ? 'mdc-dialog__body--scrollable' : ''")
        slot

      // FOOTER
      footer.mdc-dialog__footer
        slot(name="footer")
          button.mdc-button.mdc-dialog__footer__button.mdc-dialog__footer__button--cancel(type="button" ref="cancelButtonElement") ${cancel}
          button.mdc-button.mdc-dialog__footer__button.mdc-dialog__footer__button--accept(type="button" ref="acceptButtonElement" disabled.bind="acceptDisabled") ${accept}

    .mdc-dialog__backdrop
